{
    "author": "Geegaz",
    "description": "A datapack about firearms",
    "name": "GGUNZ",
    "version": "2.0.0",
    
    "data_pack": {
        "load": ["src"],
        "pack_format": 8
    },
    "resource_pack": {
        "load": ["src"],
        "pack_format": 8
    },
    "pipeline": [
        "beet.contrib.yellow_shulker_box",
        "beet.contrib.installation_advancement",
        "beet.contrib.copy_files",
        "beet.contrib.babelbox",
        "pipelines.items",
        "pipelines.nbt_recipes",
        "pipelines.ggunz.guns"
    ],
    "meta": {
        "babelbox": {
            "load": ["ggunz.csv"],
            "namespace": "ggunz",
            "filename_prefix": true
        },
        "copy_files": {
            "data_pack": {
                "LICENSE.md": "data_pack_license.md"
            },
            "resource_pack": {
                "LICENSE.md": "resource_pack_license.md"
            }
        },
        "installation_advancement": {
            "project_advancement_path": "ggunz:installed",
            "icon": {
                "item": "minecraft:carrot_on_a_stick", 
                "nbt": "{CustomModelData: 170001}"
            }
        },
        "items": {
            "load": ["items.json"],
            "cmd_id": 1700000
        },
        "guns": {
            "load": ["guns.json"]
        }
    }
}